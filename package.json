{
  "name": "inversus",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^6.4.2",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-router-transition": "^1.3.0",
    "react-scripts": "3.1.1",
    "react-transition-group": "^4.2.2",
    "tailwind": "^4.0.0",
    "tailwindcss": "^1.1.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react",
    "build:css": "postcss src/vendor/css/tailwind.css -o src/vendor/css/index.css",
    "watch:css": "postcss src/vendor/css/tailwind.css -o src/vendor/css/index.css -w",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.1.2"
  }
}
